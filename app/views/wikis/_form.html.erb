<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <%= form_for @wiki do |f| %>
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </p>
      <p>
        <%= f.label :body %><br>
        <%= f.text_area :body, rows: "8", cols: "50" %>
      </p>
      <% if current_user.admin? || current_user.premium? %>
        <p>
          <%= f.label :private, class: 'checkbox' do %>
            <%= f.check_box :private %>
            Private wiki
            <% end %>
        </p>
      <% end %>
        <%= f.submit "Save", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
